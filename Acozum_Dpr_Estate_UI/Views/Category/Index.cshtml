@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
@{string delyazi = ""; }
@{string delicon = ""; }
@{string delcolor = ""; }
@{string stayazi = ""; }
@{string staicon = ""; }
@{string stacolor = ""; }

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kategori Listesi</h6>
        <div class="table-responsive">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Kategori Adı</th>
                        <th scope="col">Durum</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        switch (item.CategoryStatus)
                        {
                            case true:
                                delyazi = "Pasif Yap";
                                delicon = "fa fa-lock";
                                delcolor = "btn btn-outline-danger";
                                stacolor = "badge btn-success";
                                staicon = "fa fa-lock-open";
                                stayazi = "Aktif";
                                break;
                            case false:
                                delyazi = "Aktif Yap";
                                delicon = "fa fa-lock-open";
                                delcolor = "btn btn-outline-success";
                                stacolor = "badge btn-danger";
                                staicon = "fa fa-lock";
                                stayazi = "Pasif";
                                break;
                        }
                        <tr>
                            <th scope="row">@item.CategoryID</th>                            
                            <td>@item.CategoryName</td>
                            <td><span class="@stacolor">@stayazi <i class="@staicon"></i></span></td>
                            <td><a href="#" class="@delcolor"><i class="@delicon"></i> @delyazi</a></td>
                            <td><a href="#" class="btn btn-outline-primary">Güncelle</a></td>

                        </tr>
                    }
                </tbody>                
            </table>
            <a href="#" class="btn btn-outline-info">Yeni Kategori Girişi</a>
        </div>
    </div>
</div>


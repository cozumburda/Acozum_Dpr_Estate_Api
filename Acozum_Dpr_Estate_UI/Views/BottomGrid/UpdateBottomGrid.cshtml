@model UpdateBottomGridDto
@{
    ViewData["Title"] = "UpdateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Öne Çıkan Güncelleme Sayfası</h6>
        <form method="post">
            <input type="hidden" asp-for="BottomGridID" />
            <label>İkon</label>
            <input type="text" asp-for="Icon" class="form-control" />
            <br />
            <label>Başlık</label>
            <input type="text" asp-for="Title" class="form-control" />
            <br />
            <label>İçerik</label>
            <input type="text" asp-for="Description" class="form-control" />
            <br />

            <button class="btn btn-success">Öne Çıkan Güncelle</button>
        </form>
    </div>
</div>


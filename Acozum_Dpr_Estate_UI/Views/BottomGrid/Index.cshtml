@model List<ResultBottomGridDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}
@{int count = 0;}
<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Öne Çıkanlar Listesi</h6>
        <div class="table-responsive">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">İkon</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">Açıklama</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;                     
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Icon</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td><a href="/BottomGrid/DeleteBottomGrid/@item.BottomGridID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/BottomGrid/UpdateBottomGrid/@item.BottomGridID" class="btn btn-outline-primary">Güncelle</a></td>

                        </tr>
                    }
                </tbody>
            </table>
            <a href="/BottomGrid/CreateBottomGrid/" class="btn btn-outline-info">Yeni Öne Çıkan Girişi</a>
        </div>
    </div>
</div>


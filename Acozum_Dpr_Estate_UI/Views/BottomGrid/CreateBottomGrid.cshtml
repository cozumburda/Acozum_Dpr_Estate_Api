@model CreateBottomGridDto
@{
    ViewData["Title"] = "CreateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Yeni Öne Çıkan Ekleme Sayfası</h6>
        <form method="post">
            <label>İkon</label>
            <input type="text" asp-for="Icon" class="form-control" />
            <br />
            <label>Başlık</label>
            <input type="text" asp-for="Title" class="form-control" />
            <br />
            <label>İçerik</label>
            <input type="text" asp-for="Description" class="form-control" />
            <br />
            <button class="btn btn-primary">Öne Çıkan Oluştur</button>
        </form>
    </div>
</div>

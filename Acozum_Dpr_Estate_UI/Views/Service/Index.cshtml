@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

@{int count = 0;}
@{string delyazi = "";}
@{string delicon = "";}
@{string delcolor = "";}
@{string stayazi = "";}
@{string staicon = "";}
@{string stacolor = "";}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Hizmet Listesi</h6>
        <div class="table-responsive">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Hizmet Başlığı</th>                        
                        <th scope="col">Durum</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Aktif/Pasif Yap</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        switch (item.ServiceStatus)
                        {
                            case true:
                                delyazi = "Pasif Yap";
                                delicon = "fa fa-lock";
                                delcolor = "btn btn-danger";
                                stacolor = "btn btn-success";
                                staicon = "fa fa-lock-open";
                                stayazi = "Aktif";
                                break;
                            case false:
                                delyazi = "Aktif Yap";
                                delicon = "fa fa-lock-open";
                                delcolor = "btn btn-success";
                                stacolor = "btn btn-danger";
                                staicon = "fa fa-lock";
                                stayazi = "Pasif";
                                break;
                        }
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.ServiceName</td>                           
                            <td><span class="@stacolor">@stayazi <i class="@staicon"></i></span></td>
                            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Service/ChangeStatusService/@item.ServiceID" class="@delcolor"><i class="@delicon"></i> @delyazi</a></td>
                            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-primary">Güncelle</a></td>

                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Service/CreateService/" class="btn btn-outline-info">Yeni Hizmet Girişi</a>
        </div>
    </div>
</div>



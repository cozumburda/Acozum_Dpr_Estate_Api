@model GetProductDetailByProductIdDto
@{
    ViewData["Title"] = "PropertySingle";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

@if (Model != null)
{
    int month = (DateTime.Now - Model.AdvertisementDate).Days / 30;
    int day = (DateTime.Now - Model.AdvertisementDate).Days % 30;

    <section class="w3l-about-breadcrumb">
        <div class="breadcrumb-bg breadcrumb-bg-about pt-5">
            <div class="container pt-lg-5 py-3">
            </div>
        </div>
    </section>
    <section class="w3l-breadcrumb">
        <div class="container">
            <ul class="breadcrumbs-custom-path">
                <li><a href="/Default/Index/">Anasayfa</a></li>
                <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span><a href="/Property/Index/"> İlanlar</a></li>
                <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> @ViewBag.t detayları</li>
            </ul>
        </div>
    </section>
    <!--/blog-post-->
    <section class="w3l-blog post-content py-5">
        <div class="container py-lg-4 py-md-3 py-2">
            <div class="inner mb-4">
                <ul class="blog-single-author-date align-items-center">
                    <li>
                        <div class="listing-category"><span>@Model.Type</span></div>
                    </li>
                    <li><span class="fa fa-clock-o"></span> @(month > 0 ? month + " " + "Ay," : "") @day Gün önce</li>
                    <li><span class="fa fa-eye"></span> 250 Kişi İnceledi</li>
                </ul>
            </div>
            <div class="post-content">
                <h2 class="title-single"> @Model.ProductTitle </h2>
            </div>
            <div class="blo-singl mb-4">
                <ul class="blog-single-author-date align-items-center">
                    <li>
                        <p>@Model.Address, @Model.District, @Model.City </p>
                    </li>
                    <li><span class="fa fa-bed"></span> @Model.BedRoomCount</li>
                    <li><span class="fa fa-bath"></span> @Model.BathCount</li>
                    <li><span class="fa fa-share-square-o"></span> @Model.ProductSize Metrekare</li>
                </ul>
                <ul class="share-post">
                    <a href="#url" class="cost-estate m-o">₺ @Model.Price.ToString("#,###")</a>
                </ul>
            </div>
            <div class="row">
                <div class="col-lg-8 w3l-news">
                    <div class="blog-single-post">
                        <div class="single-post-image mb-5">
                            <div class="owl-blog owl-carousel owl-theme">
                                @await Component.InvokeAsync("_PropertySingleImagesComponentPartial")
                            </div>
                        </div>

                        <div class="single-post-content">
                            <h3 class="post-content-title mb-3">Açıklama</h3>
                            <div>@Html.Raw(Model.Description)</div>
                            <div class="single-bg-white">
                                <h3 class="post-content-title mb-4">Detaylar</h3>
                                <ul class="details-list">
                                    <li><strong>Emlak id :</strong> @Model.ProductDetailID </li>
                                    <li><strong>Alan :</strong> @Model.ProductSize M.kare </li>
                                    <li><strong>Oda Sayısı :</strong> @Model.RoomCount </li>
                                    <li><strong>Y.Odası Sayısı :</strong> @Model.BedRoomCount </li>
                                    <li><strong>Banyo Sayısı :</strong> @Model.BathCount </li>
                                    @* <li><strong>Extra Materyal :</strong> Brick </li> *@
                                    @* <li><strong>Yapı Tipi :</strong> Wood </li> *@
                                    <li><strong>Garaj Büyüklüğü :</strong> @Model.GarageSize </li>
                                    @* <li><strong>Garages :</strong> @Model.GarageSize </li> *@
                                    <li><strong>Fiyat :</strong> ₺ @Model.Price.ToString("#,###") </li>
                                    <li><strong>Yapım Yılı :</strong> @Model.BuildYear </li>
                                    <li><strong>Kullanıma Başlanma :</strong> @Model.BuildYear </li>
                                </ul>
                            </div>
                            <div class="single-bg-white">
                                <h3 class="post-content-title mb-4">Özellikler</h3>
                                <ul class="details-list">
                                    <li><strong>Air Conditioning </strong></li>
                                    <li><strong>Buil-In Wardrobes </strong> </li>
                                    <li><strong>Dishwasher</strong> </li>
                                    <li><strong>Floor Coverings </strong> </li>
                                    <li><strong>Medical / Clinic </strong> </li>
                                    <li><strong>Fencing</strong> </li>
                                    <li><strong>Internet and wifi </strong> </li>
                                </ul>
                            </div>
                        </div>

                        <div class="single-bg-white">
                            <h3 class="post-content-title mb-4">Konum</h3>
                            <div class="agent-map">
                                <iframe src="@Model.Location"
                                        frameborder="0" style="border:0" allowfullscreen=""></iframe>
                            </div>
                        </div>

                        <div class="single-bg-white mb-0">
                            <h3 class="post-content-title mb-4">Video</h3>
                            <div class="post-content">
                                <iframe src="@Model.VideoUrl" frameborder="0"
                                        allowfullscreen=""></iframe>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="sidebar-side col-lg-4 col-md-12 col-sm-12 mt-lg-0 mt-5">
                    <aside class="sidebar">

                        <!-- Popular Post Widget-->
                        <div class="sidebar-widget popular-posts">
                            <div class="sidebar-title">
                                <h4>İlan Sahibi</h4>
                            </div>

                            <article class="post">
                                <figure class="post-thumb">
                                    <img src="@Model.EmployeeImage" class="radius-image" alt="">
                                </figure>
                                <div class="text mb-0">
                                    <a href="#">
                                        @Model.EmployeeName
                                    </a>
                                    <div class="post-info">+(90) @Model.EmployeePhone</div>
                                    <div class="post-info">@Model.EmployeeMail</div>
                                </div>
                            </article>
                            <button type="submit" class="btn btn-primary btn-style w-100">Tüm İlanları</button>
                        </div>


                        <!-- Popular Post Widget-->
                        <div class="sidebar-widget popular-posts">
                            <div class="sidebar-title">
                                <h4>Popular Post</h4>
                            </div>

                            <article class="post">
                                <figure class="post-thumb">
                                    <img src="~/starter/assets/images/l1.jpg" class="radius-image" alt="">
                                </figure>
                                <div class="text">
                                    <a href="#blog-single">
                                        Why we are the best in the business
                                    </a>
                                    <div class="post-info">Sep 09, 2020 - 2 comments</div>
                                </div>
                            </article>

                            <article class="post">
                                <figure class="post-thumb">
                                    <img src="~/starter/assets/images/l2.jpg" class="radius-image" alt="">
                                </figure>
                                <div class="text">
                                    <a href="#blog-single">
                                        Build your next landing page.
                                    </a>
                                    <div class="post-info">Sep 09, 2020 - 2 comments</div>
                                </div>
                            </article>

                            <article class="post">
                                <figure class="post-thumb">
                                    <img src="~/starter/assets/images/l3.jpg" class="radius-image" alt="">
                                </figure>
                                <div class="text">
                                    <a href="#blog-single">
                                        Simply the best. Better than the rest.
                                    </a>
                                    <div class="post-info">Sep 10, 2020 - 2 comments</div>
                                </div>
                            </article>

                        </div>

                    </aside>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <section class="w3l-about-breadcrumb">
        <div class="breadcrumb-bg breadcrumb-bg-about pt-5">
            <div class="container pt-lg-5 py-3">
            </div>
        </div>
    </section>
    <section class="w3l-breadcrumb">
        <div class="container">
            <ul class="breadcrumbs-custom-path">
                <li><a href="/Default/Index/">Anasayfa</a></li>
                <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span><a href="/Property/Index/"> İlanlar</a></li>
                <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlan Detayları Hazırlanıyor</li>
            </ul>
        </div>
    </section>
}
@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Yeni İlan Ekleme Sayfası</h6>
        <form method="post">
            <label>İlan Başlığı</label>
            <input type="text" asp-for="ProductTitle" class="form-control" />
            <br />
            <label>Şehir</label>
            <input type="text" asp-for="City" class="form-control" />
            <br />
            <label>İlçe</label>
            <input type="text" asp-for="District" class="form-control" />
            <br />
            <label>Kategori</label>
            @Html.DropDownListFor(x => x.ProductCategory, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
            <br />
            <label>Fiyat</label>
            <input type="text" asp-for="Price" class="form-control" />
            <br />
            <label>Tür</label>
            <select type="text" asp-for="Type" class="form-control">
                <option value="Satılık">Satılık</option>
                <option value="Kiralık">Kiralık</option>
            </select>
            <br />
            <label>Kapak Fotoğrafı</label>
            <input type="text" asp-for="CoverImage" class="form-control" />
            <br />
            <label>İlan Açık Adresi</label>
            <textarea asp-for="Address" class="form-control" rows="5"></textarea>
            <br />
            <label>Açıklama</label>
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            <br />
            <label class="form-check-label mr-2">Günün İlanı</label>
            <input type="checkbox" asp-for="DealOfTheDay" class="form-check-input" />
            <br />
            <button class="btn btn-primary mt-2">İlanı Kaydet</button>
        </form>
    </div>
</div>


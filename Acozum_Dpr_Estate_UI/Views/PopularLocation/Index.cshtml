@model List<ResultPopularLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

@{
    int count = 0;
}

<style>
    img {
        border-radius: 50%;
    }
</style>
<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Popüler Lokasyonlar Listesi</h6>
        <div class="table-responsive">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Şehir Adı</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        var n = "Modal" + item.LocationID;
                        var l = "#Modal" + item.LocationID;
                        <tr>
                            <td scope="row">@count</td>
                            <td align="left"><img src="@item.ImageUrl" height="50" width="50" /> @item.CityName</td>
                            <td>
                                <a href="/PopularLocation/DeletePopularLocation/@item.LocationID" class="btn btn-outline-danger"
                                   onclick="return confirm('Popüler Şehri Silmek İstediğinizden Emin Misiniz? : @item.CityName')">SİL</a>
                            </td>
                            <td><a href="/PopularLocation/UpdatePopularLocation/@item.LocationID" class="btn btn-outline-primary">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/PopularLocation/CreatePopularLocation/" class="btn btn-outline-info">Yeni Lokasyon Girişi</a>
        </div>
    </div>
</div>



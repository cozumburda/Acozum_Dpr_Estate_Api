@model UpdateEmployeeDto
@{
    ViewData["Title"] = "UpdateEmployee";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Personel Güncelleme Sayfası</h6>
        <form method="post">
            <input type="hidden" asp-for="EmployeeID" />
            <label>Personel Adı Soyadı</label>
            <input type="text" asp-for="Name" class="form-control" />
            <br/>
            <label>Personel Ünvanı</label>
            <input type="text" asp-for="Title" class="form-control" />
            <br />
            <label>Personel Mail Adresi</label>
            <input type="text" asp-for="Mail" class="form-control" />
            <br />
            <label>Personel Telefon</label>
            <input type="text" asp-for="PhoneNumber" class="form-control" />
            <br />
            <label>Personel Fotoğrafı</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
            <br />
            <input type="hidden" asp-for="Status" />
            <br />
            <button class="btn btn-success">Kategoriyi Güncelle</button>
        </form>
    </div>
</div>


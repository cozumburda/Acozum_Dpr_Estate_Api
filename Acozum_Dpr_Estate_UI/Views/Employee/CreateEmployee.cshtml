@model CreateEmployeeDto
@{
    ViewData["Title"] = "CreateEmployee";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Yeni Personel Ekleme Sayfası</h6>
        <form method="post">
            <label>Personel Adı Soyadı</label>
            <input type="text" asp-for="Name" class="form-control" />
            <br />
            <label>Personel Ünvanı</label>
            <input type="text" asp-for="Title" class="form-control" />
            <br />
            <label>Personel Mail Adresi</label>
            <input type="email" asp-for="Mail" class="form-control" />
            <br />
            <label>Personel Telefon</label>
            <input type="tel" asp-for="PhoneNumber" class="form-control" />
            <br />
            <label>Personel Fotoğraf</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
            <br />
            <button class="btn btn-primary">Personel Oluştur</button>
        </form>
    </div>
</div>

